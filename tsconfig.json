{
	"compilerOptions" : {
		"allowJs" : true ,
		"allowSyntheticDefaultImports" : true ,
		"allowUnusedLabels" : true ,
		"baseUrl" : "." ,
		"declaration" : false ,
		"declarationMap" : false ,
		"esModuleInterop" : true ,
		"experimentalDecorators" : true ,
		"jsx" : "react" ,
		"resolveJsonModule" : true ,
		"strictFunctionTypes" : false ,
		"strict" : false ,
		"strictBindCallApply" : false ,
		"strictNullChecks" : false ,
		"allowUnreachableCode" : true ,
		"module" : "ESNext" ,
		"moduleResolution" : "node" ,
		"noEmit" : true ,
		"noImplicitAny" : false ,
		"noImplicitReturns" : false ,
		"noImplicitUseStrict" : false ,
		"noUnusedLocals" : false ,
		"noUnusedParameters" : false ,
		"preserveConstEnums" : true ,
		"removeComments" : true ,
		"sourceMap" : true ,
		"target" : "ESNext" ,
		"watch" : false ,
		"allowSyntheticDefaultImports" : true ,
		"paths" : {
			"reaxes-utils": ["./packages/reaxes-utils"],
			"reaxes-toolkit": ["./packages/reaxes-toolkit"],
			"reaxes": ["./packages/reaxes"],
			"reaxes/*": ["./packages/reaxes/*"],
			"reaxes-react": ["./packages/reaxes-react"],
			"reaxes-vue2": ["./packages/reaxes-vue2"],
			"reaxes-vue3": ["./packages/reaxes-vue3"],
			"reaxels/*": ["./packages/reaxels/*"]
		}
	} ,
	"exclude" : [ "node_modules" , "dist" , ".git" , ".idea" , ".svn" ]
}
